{
  "name": "local-mcp-hub",
  "version": "1.0.0",
  "description": "Portable MCP hub for local development with remote Ollama server",
  "main": "dist/hub.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/hub.js",
    "dev": "ts-node src/hub.ts",
    "test": "echo \"Testing connection to remote Ollama...\"",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "format:all": "prettier --write ."
  },
  "keywords": [
    "mcp",
    "ollama",
    "ai",
    "developer-tools",
    "local"
  ],
  "author": "Local MCP Hub",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
